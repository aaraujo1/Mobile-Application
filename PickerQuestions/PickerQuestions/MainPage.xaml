<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:PickerQuestions" x:Class="PickerQuestions.MainPage">
    <StackLayout Margin="20,35,20,20">
        <Label Text="Picker - Data in ItemsSource" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />
        <Picker x:Name="picker" 
                Title="Select an Animal"
                TitleColor="Red"
                ItemDisplayBinding="{Binding Text}"
                SelectedItem="{Binding Text}"
                >
           
        </Picker>
        <StackLayout Orientation="Horizontal">
            <Label Text="You chose:" />
            <Label Text="{Binding Source={x:Reference picker}, Path=SelectedItem}" />
        </StackLayout>
    </StackLayout>
</ContentPage>