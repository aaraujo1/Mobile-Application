<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:MorseCode" x:Class="MorseCode.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               x:Name = "_labelMorse"
               />
        <Label Text="" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               x:Name = "_labelAlpha"
               />
        <Label Text="" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               x:Name = "_labelError"
               />
    
    
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
    <Button Text="." 
            Grid.Column="0"
            Clicked="OnDotButtonClicked" />
        
        <Button 
        Text="-" 
        Grid.Column="1"
        Clicked="OnDashButtonClicked" />

    </Grid>
        <Button Text="_"
        Grid.Column="2"
        Clicked="OnSpaceButtonClicked" />
        </StackLayout>
</ContentPage>